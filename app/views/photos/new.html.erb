<div id='backend_upload'>
  <div id='header'>
    <img src='<%= asset_path "QS_Logo.png" %>' class='logo'>
    <h1>Quantified Selfies</h1>
    <p><em>A Dem Boyz production</em></p>
  </div>

  <div class='image_upload'>
    <h3>Upload an image, get your tags!</h3>
    <%= form_for(@photo, :url => photos_path) do |f| %>
      <div class="form_line">
        <%= f.label :title, "Title:" %>
        <div class="form_controls">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="form_line">
        <%= f.label :image, "Image:" %>
        <div class="form_controls">
          <%= f.file_field :image %>
          <%= f.hidden_field(:image_cache) %>
        </div>
      </div>
      <div class="form_line">
        <div class="form_controls">
          <%= f.submit "Submit Photo" %>
          <% if @error %><span class="error"><%= @error %></span><% end %>
        </div>
      </div>
      <%= hidden_field_tag :direct, params[:direct] %>
    <% end %>
  </div>
  <a href="<%= photos_path %>" class="back_link">Back to list</a>
</div>
